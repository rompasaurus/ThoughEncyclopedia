@model ThoughtEncyclopedia.Models.ThoughtView

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Thought</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(s => s.TopicId,"Topic")
                @Html.DropDownListFor(s => s.TopicId, Model.Topics)
                @Html.ValidationMessageFor(s => s.TopicId)
            </div>

            <div class="form-group">
                <label asp-for="ContentText" class="control-label"></label>
                <input asp-for="ContentText" class="form-control" />
                <span asp-validation-for="ContentText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
