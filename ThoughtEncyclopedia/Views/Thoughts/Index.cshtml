@model IEnumerable<ThoughtEncyclopedia.Models.Thought>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContentText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateModified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ViewCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpvoteCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DownvoteCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LikeCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ContentText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateModified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ViewCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpvoteCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DownvoteCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LikeCount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ThoughtId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ThoughtId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ThoughtId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
